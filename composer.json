{
    "name": "boson-php/pasm",
    "description": "Provides lightweight PHP assembly executor",
    "type": "library",
    "license": "MIT",
    "homepage": "https://bosonphp.com",
    "support": {
        "issues": "https://github.com/boson-php/boson/issues",
        "source": "https://github.com/boson-php/pasm"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.4",
        "ffi/env": "^1.0",
        "boson-php/weak-types": "^0.15"
    },
    "autoload": {
        "psr-4": {
            "Boson\\Component\\Pasm\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Boson\\Component\\Pasm\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.15.x-dev",
            "dev-main": "0.15.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "bin-compat": "full",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
